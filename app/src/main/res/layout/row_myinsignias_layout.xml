<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/item_background" > <!-- Fondo para cada item -->

    <!-- Icono de la imagen redondeada -->
    <ImageView
        android:id="@+id/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:contentDescription="Item Icon"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="centerCrop"
        android:background="@drawable/circular_background" /> <!-- Fondo circular para la imagen -->

    <!-- Nombre del item -->
    <TextView
        android:id="@+id/insigniaName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/icon"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:text="Insignia Name"
        android:textColor="#333333"
        android:textSize="16sp" />

    <!-- Precio del item -->

    <!-- Item ID -->
</RelativeLayout>